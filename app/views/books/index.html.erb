<%= form_with model:@book, url:'', local:true do |f| %>
    <!-- 一覧表示 -->
    <h1>Books</h1>




    <!-- 新規投稿 -->
    <div class="new-book">
        <h2>New book</h2>

        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body %>
        <div>
            <%= f.submit 'Create Book' %>
        </div>
        

    </div>



<% end %>



