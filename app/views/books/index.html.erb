


    <div class="notifications">
        <% flash.each do |message_type, message| %>
            <%= message %>
        <% end %>
    </div>
   

    <h1>Books</h1>

    <!-- 一覧表示 -->
    <table style="table-layout: fixed;">

        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>


        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <!--<td><a class="show" href="/books/">Show</a></td>-->
                <td><%= link_to "Show", "/books/#{book.id}" %></td>
                <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
                <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
        <% end %>


    </table>

    <div class="alert">
        <% if @book.errors.any? %>
            
            <%= @book.errors.count %> errors prohibited this book from being saved:<br>
            <% @book.errors.full_messages.each do |message| %>
                ・<%= message %><br>
            <% end %>
        <% end %>
    </div>
    
    



    <!-- 新規投稿 -->
    <%= form_with model:@book, url:'/books', local:true do |f| %>
        <div class="new-book">
            <h2>New book</h2>
            <p>Title</p>
            <%= f.text_field :title %>
            <p>Body</p>
            <%= f.text_area :body %>
            <div>
                <%= f.submit 'Create Book' %>
            </div>
        </div>
    <% end %>



